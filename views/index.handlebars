<header>
    <img src="assets/img/burgerImg.png" alt="burger">
    <h1>Eat that Burger!</h1>
</header>

<div class="wrapper">
    <div class="newItems">
        <h2>Burgers Not Yet Devoured!</h2>
        <ul>
        {{#each burger}}
            {{#unless devoured}}
                <li class="subsection">
                    <div class="itemName"><span class="label"></span> {{this.id}}. <span class="label">{{this.burger_name}} </span></div>
                    <div class="itemButton"><button data-id="{{this.id}}" class="updburger">Devour it!</button></div>
                </li>
                {{/unless}}
        {{/each}}
        </ul>
        
    </div>

    <div class="updatedItems">
        <h2>Burgers Devoured!</h2>

        <ul>
        {{#each burger}}
                {{#if devoured}}
                <li>
                    <div class="itemNameCompleted"><span class="label"></span> {{this.id}}. <span class="label">{{this.burger_name}} </span></div
                </li>
                {{/if}}
        {{/each}}
        </ul>

    </div>
</div>


<div class="form">
    <form id="addBurger" class="button-size">
        <textarea type="text" id="burger" name="burger"></textarea> 
        <br>
        <button class="submitButton" type="submit">Submit!</button>
    </form>
    <h4>Write the name of the burger you want to eat. Then click "submit" to add it to the list.</h4>
</div>





